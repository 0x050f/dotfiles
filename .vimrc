" colors

syntax on
colorscheme edge

" cursor

set ruler
set cursorline
set mouse=a

" tabs & spaces

set tabstop=4
set noexpandtab

" ui config

set number
set showcmd
set lazyredraw
set showmatch

" search

set hlsearch
set incsearch

" movement

nnoremap j gj
nnoremap k gk
